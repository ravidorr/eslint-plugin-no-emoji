{
  "name": "eslint-plugin-no-emoji",
  "version": "1.0.0",
  "description": "ESLint rule to disallow emoji characters in code",
  "type": "module",
  "exports": {
    ".": "./lib/index.js"
  },
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint lib tests",
    "lint:fix": "eslint lib tests --fix",
    "prepare": "husky"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "emoji",
    "no-emoji",
    "ascii"
  ],
  "author": "Raanan Avidor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ravidorr/eslint-plugin-no-emoji.git"
  },
  "bugs": {
    "url": "https://github.com/ravidorr/eslint-plugin-no-emoji/issues"
  },
  "homepage": "https://github.com/ravidorr/eslint-plugin-no-emoji#readme",
  "dependencies": {
    "emoji-regex": "^10.3.0"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "eslint-plugin-eslint-plugin": "^7.3.0",
    "eslint-plugin-n": "^17.15.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  }
}
